{% extends 'product/product_layout.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr/>
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('product_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('product_index') }}">{% trans %}List{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Product list</h1>
    <div class="table-responsive">
        <table class="table table-hover records_list">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Feature</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for product in entities %}
                {{ dump(product) }}
                <tr>
                    <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                    <td>
                        {% for names in product.productLangs %}
                            {% if names['lang'] == lang %}
                                {{ names['name'] }}
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ product.salePrice }}</td>
                    <td>
                        {% for feat in product.features %}
                            {{ feat[lang] }} {{ feat[lang] }}
                        {% endfor %}
                    </td>
                    <td>
                        <a class="btn btn-sm btn-info" href="{{ path('product_show', { 'id': product.id }) }}">
                            <span class="glyphicon glyphicon-share"></span> Show</a>

                        <a class="btn btn-sm btn-default" href="{{ path('product_edit', { 'id': product.id }) }}">
                            <span class="glyphicon glyphicon-edit"></span> Edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>





{% endblock %}
